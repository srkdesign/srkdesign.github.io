---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header";
import DiscussProject from "../components/DiscussProject";
import Footer from "../components/Footer";

const isHomePage = Astro.url.pathname === "/";
const isBlogPage = Astro.url.pathname.includes("blog");

const postImage = `/images${Astro.url.pathname}hero.png`;

const { title, description } = Astro.props;
---

<html lang={Astro.currentLocale} class="text-base">
  <head>
    <BaseHead
      title={title || SITE_TITLE}
      description={description || SITE_DESCRIPTION}
      image={isBlogPage && Astro.url.pathname != "/blog/"
        ? postImage
        : `/image.png`}
    />
    <!-- <ClientRouter /> -->
  </head>
  <body class="text-zinc-50 bg-zinc-950 transition-main">
    <section
      class={`${isHomePage ? "lg:h-full" : "lg:min-h-screen"} flex flex-col justify-between`}
    >
      <Header client:only="react" />
      <div class="pt-28" id="swup">
        <slot />
      </div>

      <!-- {!isBlogPage ? <DiscussProject client:only="react" /> : ""} -->
    </section>
    <Footer client:only="react" />
    <div class="overlay transition-overlay"></div>
  </body>
</html>

<script>
  import Swup from "swup";
  const swup = new Swup({
    containers: ["#swup"],
  });
</script>
