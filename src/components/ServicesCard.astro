---
import Tag from './Tag.astro';

interface Props {
  title: string;
  services: Array<string>;
}

const { title, services } = Astro.props;
---

<li class="pt-6">
  <h3 class="mb-4 text-xl capitalize leading-6">{title}</h3>
  <ul class="flex flex-wrap gap-4 mb-8">
    {
      services.map((service) => (
        <Tag content={service} />
      ))
    }
  </ul>
</li>