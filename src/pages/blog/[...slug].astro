---
// Content
import { type CollectionEntry, getCollection, render } from "astro:content";

// Components
import PostLayout from "@layouts/PostLayout.astro";
import type { HeadingProps } from "../../types";

interface Props {
  post: CollectionEntry<"blog">;
  headings: HeadingProps[];
}

export async function getStaticPaths() {
  const pLocale = "ru";
  const posts = await getCollection("blog");
  const localizedPosts = posts.filter((p) => p.id.startsWith(`${pLocale}/`));
  const headings = await Promise.all(
    localizedPosts.map(async (post: CollectionEntry<"blog">) => {
      const data = await render(post);
      return data.headings;
    }),
  );
  return localizedPosts.map((post, index) => ({
    params: { locale: pLocale, slug: post.id.split("/")[1] },
    props: { post, headings: headings[index] },
  }));
}

const { post, headings }: Props = Astro.props;
const { Content } = await render(post);
---

<PostLayout {...post.data} headings={headings} locale="ru">
  <Content />
</PostLayout>
